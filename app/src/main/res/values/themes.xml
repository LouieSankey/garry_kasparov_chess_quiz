<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MasterClassQuizCompanion" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/MyActionBar</item>
        <item name="boxStrokeColor">@style/NameTextInputLayoutStyle</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="toolbarStyle">@style/my_Toolbar</item>

    </style>

    <style name="NameTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="my_Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
    </style>






<style name="HomeScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">



        <!-- Primary brand color. -->
        <item name="colorPrimary">#E94260</item>
        <item name="colorPrimaryVariant">#E94260</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#E94260</item>
        <item name="colorSecondaryVariant">#E94260</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="MyActionBar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/master_class_darkgrey</item>
    </style>

</resources>